<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Food Order System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body class="bg-gray-100">
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

    <div class="container mx-auto p-4 max-w-6xl">
        <div class="card bg-white p-6 rounded-3xl shadow-sm">
            <header class="text-center mb-8">
                <h1 class="text-4xl font-black text-pink-600">Food Order System</h1>
                <p id="user-id-display" class="text-gray-500 mt-2 font-medium">System Online</p>
            </header>

            <nav class="flex flex-wrap justify-center gap-2 mb-10 border-b pb-6">
                <button id="navOrder" onclick="showSection('orderFormSection')" class="btn btn-active">New Order</button>
                <button id="navView" onclick="showSection('ordersListSection')" class="btn btn-secondary">View Orders</button>
                <button id="navSummary" onclick="showSection('orderSummarySection')" class="btn btn-secondary">Order Summary</button>
                <button id="navMenu" onclick="showSection('manageMenuSection')" class="btn btn-secondary">Manage Menus</button>
                <button id="navSales" onclick="showSection('salesReportSection')" class="btn btn-secondary">Sales Report</button>
            </nav>

            <section id="orderFormSection">
                <form id="orderForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block font-bold mb-1">Customer Name</label>
                            <input type="text" id="customerName" class="w-full p-3 border rounded-xl outline-none focus:ring-2 focus:ring-pink-400" required>
                        </div>
                        <div>
                            <label class="block font-bold mb-1">Order Date</label>
                            <input type="date" id="orderDate" class="w-full p-3 border rounded-xl" required>
                        </div>
                    </div>
                    <div>
                        <label class="block font-bold mb-2">Menu Items</label>
                        <div id="menuItems" class="grid grid-cols-1 md:grid-cols-2 gap-3 p-4 border rounded-2xl bg-gray-50 max-h-80 overflow-y-auto"></div>
                    </div>
                    <div class="w-full md:w-1/3">
                        <label class="block font-bold mb-1">Delivery Fee (RM)</label>
                        <input type="number" id="deliveryFee" step="1" value="0" class="w-full p-3 border rounded-xl" oninput="calculateTotalPrice()">
                    </div>
                    <div class="text-right border-t pt-6">
                        <p class="text-3xl font-black text-pink-600">Grand Total: <span id="totalPriceDisplay">RM 0.00</span></p>
                    </div>
                    <button type="submit" class="btn btn-primary w-full py-4 mt-4 shadow-lg text-lg">Place Order</button>
                </form>
            </section>

            <section id="ordersListSection" class="hidden">
                <div class="flex flex-wrap justify-between items-center mb-6 gap-4">
                    <div>
                        <h2 class="text-2xl font-bold">Orders & Groceries</h2>
                        <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mt-1">Showing today's records (Clear search to reset)</p>
                    </div>
                    <div class="flex flex-wrap gap-2 w-full md:w-auto">
                        <input type="text" id="orderSearch" placeholder="Search name or item..." class="p-3 border rounded-xl flex-grow md:w-64 shadow-sm" oninput="renderAll()">
                        <div class="flex items-center bg-white border rounded-xl px-3 shadow-sm">
                            <span class="text-[10px] font-black text-gray-400 mr-2 uppercase">Date:</span>
                            <input type="date" id="orderViewDate" class="py-2 outline-none" onchange="renderAll()">
                        </div>
                    </div>
                </div>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Items / Remarks</th>
                                <th>Delivery</th>
                                <th>Total</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="ordersTableBody"></tbody>
                    </table>
                </div>
            </section>

            <section id="orderSummarySection" class="hidden">
                <div class="flex flex-wrap gap-4 mb-8 items-center bg-pink-50 p-4 rounded-xl">
                    <button onclick="renderOrderSummary('customer')" class="btn btn-primary">By Customer</button>
                    <button onclick="renderOrderSummary('menu')" class="btn btn-secondary">By Prep Count</button>
                    <input type="date" id="summaryDate" class="p-2 border rounded ml-auto" onchange="renderOrderSummary(window.currentSummaryType)">
                </div>
                <div id="summaryDisplay" class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
            </section>

            <section id="manageMenuSection" class="hidden">
                <div id="menuList" class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8"></div>
                <div class="p-6 bg-white border-2 border-dashed rounded-3xl mb-10">
                    <h3 class="font-bold mb-4 text-gray-400 uppercase text-xs">New Menu Item</h3>
                    <form id="menuForm" class="flex flex-wrap gap-4">
                        <input type="text" id="menuName" placeholder="Item Name" class="flex-grow p-3 border rounded-xl" required>
                        <input type="number" id="menuPrice" placeholder="Price RM" step="0.01" class="w-32 p-3 border rounded-xl" required>
                        <button type="submit" class="btn btn-primary">Add to Menu</button>
                    </form>
                </div>
                <div class="card p-6 border-none bg-gray-50 rounded-3xl">
                    <h3 class="font-black text-gray-800 uppercase text-sm mb-4">Unit Sales Performance (This Month)</h3>
                    <ul id="topSellingItemsList" class="space-y-2"></ul>
                </div>
            </section>

            <section id="salesReportSection" class="hidden">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold">Financial Report</h2>
                    <div class="flex gap-2">
                        <select id="reportMonth" class="p-2 border rounded-xl" onchange="generateSalesReport()"></select>
                        <select id="reportYear" class="p-2 border rounded-xl" onchange="generateSalesReport()"></select>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10 text-white">
                    <div class="bg-pink-600 p-6 rounded-3xl shadow-lg">
                        <p class="uppercase text-[10px] font-bold opacity-80">Monthly Revenue</p>
                        <h2 id="totalSalesDisplay" class="text-3xl font-black mt-1">RM 0.00</h2>
                    </div>
                    <div class="bg-red-500 p-6 rounded-3xl shadow-lg">
                        <p class="uppercase text-[10px] font-bold opacity-80">Groceries Expenses</p>
                        <h2 id="totalGroceriesDisplay" class="text-3xl font-black mt-1">RM 0.00</h2>
                    </div>
                    <div class="bg-green-600 p-6 rounded-3xl shadow-lg">
                        <p class="uppercase text-[10px] font-bold opacity-80">Net Profit</p>
                        <h2 id="totalProfitDisplay" class="text-3xl font-black mt-1">RM 0.00</h2>
                    </div>
                </div>

                <div id="weeklyBreakdown" class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-10"></div>

                <div class="p-6 bg-red-50 rounded-3xl border border-red-100">
                    <h3 class="font-bold mb-4 text-red-600 uppercase text-xs tracking-widest">Add Grocery Purchase</h3>
                    <form id="groceryForm" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <input type="date" id="groceryDate" class="p-3 border rounded-xl" required>
                        <input type="text" id="groceryRemarks" placeholder="What did you buy?" class="p-3 border rounded-xl" required>
                        <input type="number" id="groceryAmount" step="0.01" placeholder="Total RM" class="p-3 border rounded-xl" required>
                        <button type="submit" class="bg-red-600 text-white rounded-xl font-bold">Save Purchase</button>
                    </form>
                </div>
            </section>
        </div>
    </div>

    <div id="modal" class="fixed inset-0 bg-black/60 hidden flex items-center justify-center p-4 z-50">
        <div class="bg-white p-8 rounded-3xl max-w-sm w-full">
            <h3 class="text-xl font-bold mb-4">Edit Item</h3>
            <div class="space-y-4">
                <input type="text" id="editNameInput" class="w-full border p-3 rounded-xl">
                <input type="number" id="editPriceInput" class="w-full border p-3 rounded-xl" step="0.01">
            </div>
            <div class="flex gap-3 mt-6">
                <button id="modalConfirmBtn" class="btn btn-primary flex-1">Save</button>
                <button onclick="closeModal()" class="btn btn-secondary flex-1 text-gray-700">Cancel</button>
            </div>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
